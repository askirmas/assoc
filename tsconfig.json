{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": false,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "pretty": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "coverage",
    "sandbox"
  ]
}